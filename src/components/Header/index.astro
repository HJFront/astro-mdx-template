---
import HeaderLink from '../Link/index.astro';
import { BASE_URL, SITE_TITLE } from '../../config';
---

<header>
	<h2>
		{SITE_TITLE}
    {BASE_URL}
	</h2>
	<nav>
		<HeaderLink href={`${BASE_URL}`}>mdx</HeaderLink>
		<HeaderLink href={`${BASE_URL}md`}>md</HeaderLink>
		<HeaderLink href={`${BASE_URL}astro`}>astro</HeaderLink>
		<HeaderLink href="https://github.com/HJFront/astro-mdx-template" target="_blank">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
